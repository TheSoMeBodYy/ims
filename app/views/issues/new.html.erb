<% provide(:title, "Report Issue") %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <main class="page-body">
      <%= render 'shared/heading' %>

      <%= form_for @issue do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :item_id, "Item" %>

          <div class="select-attribute">
            <%= f.collection_select(:item_id, @items, :id, :item_display_name, include_blank: '--Not Allocated--') %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :issue_description %>

          <%= f.text_area :issue_description, class: 'form-control' %>
        </div>

        <%= f.submit 'Report Issue', class: "btn btn-primary form-control" %>
      <% end %>
    </main>
  </div>
</div>
