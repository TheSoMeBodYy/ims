<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-warning">
       <%= pluralize(object.errors.count, "error") %> encountered!
       <ul>
         <% object.errors.full_messages.each do |msg| %>
           <li>
             <%= msg %>
           </li>
         <% end %>
       </ul>
    </div>
  </div>
<% end %>
