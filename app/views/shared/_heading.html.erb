<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>" alert-dismissible>
    <%= message %>

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">
        &times;
      </span>
    </button>
  </div>
<% end %>

<% if(:title != '') %>
  <h1 class="page-title">
    <%= yield(:title) %>
  </h1>
<% end %>
